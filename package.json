    "@capacitor/status-bar": "1.0.6",
    "@capacitor/storage": "^1.2.3",
    "@ionic/pwa-elements": "3.0.2",
    "@ionic/vue": "5.8.5",
    "@ionic/vue-router": "5.8.5",
    "core-js": "^3.6.5",
    "register-service-worker": "1.7.2",
